<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/view_actionbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/ll_shot_screen_area"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/invite_friend_bg"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:layout_marginTop="@dimen/dp_30"
                android:src="@mipmap/invite_friend_top" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                >
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@color/transparent">

                    <RelativeLayout
                        android:id="@+id/rl_qr_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/bg_rectangle_white"
                        android:padding="@dimen/dp_18">

                        <ImageView
                            android:id="@+id/iv_qr_code"
                            android:layout_width="160dp"
                            android:layout_height="160dp"
                            android:layout_centerInParent="true"
                            android:scaleType="fitCenter" />
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/tv_id"
                        android:layout_width="180dp"
                        android:layout_height="18dp"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:text="@string/reference_id"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsize_15" />

                </RelativeLayout>
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:layout_marginBottom="@dimen/dp_100"
                android:src="@mipmap/invite_friend_bottom_content" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            >

            <ImageView
                android:id="@+id/iv_invite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_10"
                android:src="@mipmap/invite_friend_btn" />
        </RelativeLayout>
    </RelativeLayout>



</LinearLayout>

