<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/bg_default_color">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ll_product"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:id="@+id/activity_main"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <androidx.core.widget.NestedScrollView
                android:id="@+id/nsv_products"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >

                    <com.kasa.ola.widget.xbanner.XBanner
                        android:id="@+id/product_banner"
                        android:layout_width="match_parent"
                        android:layout_height="260dp"
                        android:background="@color/black"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/dp_16"
                        android:paddingRight="@dimen/dp_16"
                        android:paddingTop="@dimen/dp_12"
                        android:paddingBottom="@dimen/dp_12"
                        android:background="@color/white"
                        >

                        <TextView
                            android:id="@+id/tv_product_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/COLOR_FF333333"
                            android:textSize="@dimen/textsize_20"
                            android:textStyle="bold"
                            tools:text="测试商品名（是的封建士大夫好噶山豆根发射点发）"
                            />

                        <TextView
                            android:id="@+id/tv_product_desc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/COLOR_FF999999"
                            android:textSize="@dimen/textsize_14"
                            android:layout_marginTop="@dimen/dp_4"
                            tools:text="测试商品描述（收到甲方收到附件是的福克斯的肌肤的法国山东分局书记打发时间打发时间的发甲方的四点九分十六经典服饰的加法计算多方了解）"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_4"
                            >
                            <TextView
                                android:id="@+id/tv_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/price"
                                android:textColor="@color/red"
                                android:textSize="@dimen/textsize_24"
                                android:textStyle="bold"
                                android:layout_gravity="center_vertical"
                                />
                            <TextView
                                android:id="@+id/tv_original_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_4"
                                android:layout_marginRight="@dimen/dp_4"
                                android:layout_gravity="center_vertical"
                                android:text="@string/price"
                                android:textColor="@color/COLOR_FF999999"
                                android:textSize="@dimen/textsize_14" />
                        </LinearLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_4"
                            >
                            <TextView
                                android:id="@+id/tv_back_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/back_value"
                                android:textColor="@color/red"
                                android:textSize="@dimen/textsize_14"
                                android:layout_gravity="center_vertical"
                                />
                            <TextView
                                android:id="@+id/tv_sale_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/product_details_sale_num"
                                android:textColor="@color/COLOR_FF999999"
                                android:textSize="@dimen/textsize_14"
                                android:layout_gravity="center_vertical"
                                android:layout_alignParentRight="true"
                                />
                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/white"
                        android:layout_marginTop="@dimen/dp_8"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/dp_12"
                            android:paddingBottom="@dimen/dp_12"
                            android:paddingLeft="@dimen/dp_16"
                            android:paddingRight="@dimen/dp_16"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:textSize="@dimen/textsize_14"
                                android:textColor="@color/COLOR_FF666666"
                                android:text="@string/supplier_title"
                                />
                            <TextView
                                android:id="@+id/tv_supplier"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:textSize="@dimen/textsize_14"
                                android:textColor="@color/COLOR_FF333333"
                                tools:text="喔啦商城（测试）"
                                />

                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/bg_default_color"
                            android:layout_marginLeft="@dimen/dp_16"
                            android:layout_marginRight="@dimen/dp_16"
                            />

                        <LinearLayout
                            android:id="@+id/ll_sku"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_8"
                            android:paddingTop="@dimen/dp_12"
                            android:paddingBottom="@dimen/dp_12"
                            android:paddingLeft="@dimen/dp_16"
                            android:paddingRight="@dimen/dp_16"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:textSize="@dimen/textsize_14"
                                android:textColor="@color/COLOR_FF666666"
                                android:text="@string/select_title"
                                />
                            <TextView
                                android:id="@+id/tv_sku"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:textSize="@dimen/textsize_14"
                                android:textColor="@color/COLOR_FF333333"
                                tools:text="请选择 颜色分类（测试）"
                                />
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/go_next"
                                android:layout_gravity="center_vertical"
                                />

                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/dp_8"
                        android:background="@color/white"
                        >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/dp_11"
                            android:paddingBottom="@dimen/dp_11"
                            android:paddingLeft="@dimen/dp_16"
                            android:paddingRight="@dimen/dp_16"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/COLOR_FF333333"
                                android:textSize="@dimen/textsize_16"
                                android:text="@string/product_comment_title"
                                android:textStyle="bold"
                                android:layout_centerVertical="true"
                                />

                            <TextView
                                android:id="@+id/tv_check_more"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/textsize_12"
                                android:textColor="@color/COLOR_FF999999"
                                android:text="@string/check_more"
                                android:layout_alignParentRight="true"
                                android:drawableRight="@mipmap/go_next"
                                android:drawablePadding="@dimen/dp_4"
                                android:layout_centerVertical="true"
                                />

                        </RelativeLayout>

                        <!--<LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_4"
                            android:paddingLeft="@dimen/dp_16"
                            android:paddingRight="@dimen/dp_16"
                            >

                            <ImageView
                                android:id="@+id/iv_comment_head"
                                android:layout_width="@dimen/dp_22"
                                android:layout_height="@dimen/dp_22"
                                android:src="@mipmap/icon_comment_head"
                                android:layout_gravity="center_vertical"
                                />

                            <TextView
                                android:id="@+id/tv_comment_user"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/textsize_12"
                                android:textColor="@color/COLOR_FF999999"
                                android:text="@string/product_comment_user"
                                android:layout_marginLeft="@dimen/dp_4"
                                android:layout_gravity="center_vertical"
                                />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_comment_content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_4"
                            android:textColor="@color/COLOR_FF333333"
                            android:textSize="@dimen/textsize_14"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:paddingLeft="@dimen/dp_16"
                            android:paddingRight="@dimen/dp_16"
                            android:text="测试 伺机待发洛杉矶的封建时代浪费精力圣诞节时刻提防杀了对方打了四分士大夫但是"
                            />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_comment_images"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_12"
                            android:layout_marginRight="@dimen/dp_12"
                            android:layout_marginBottom="@dimen/dp_12"
                            android:layout_marginTop="@dimen/dp_4"
                            />-->
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_product_comments"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            />
                    </LinearLayout>

                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center_horizontal"
                       android:layout_marginTop="@dimen/dp_12"
                       android:layout_marginBottom="@dimen/dp_12"
                       >
                       <View
                           android:layout_width="@dimen/dp_28"
                           android:layout_height="0.5dp"
                           android:background="@color/bg_default_color"
                           android:layout_gravity="center_vertical"
                           />
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_gravity="center_horizontal"
                           android:text="@string/product_detail"
                           android:textSize="@dimen/textsize_14"
                           android:textColor="@color/COLOR_FF666666"
                           />
                       <View
                           android:layout_width="@dimen/dp_28"
                           android:layout_height="0.5dp"
                           android:background="@color/bg_default_color"
                           android:layout_gravity="center_vertical"
                           />
                   </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_product_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

            <include layout="@layout/view_product_actionbar" />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:paddingTop="@dimen/dp_4"
            android:paddingBottom="@dimen/dp_4"
            android:orientation="horizontal">

            <!-- <TextView
                 android:id="@+id/tv_share"
                 android:layout_width="50dp"
                 android:layout_height="wrap_content"
                 android:drawableTop="@mipmap/click_share_icon"
                 android:gravity="center"
                 android:text="@string/share"
                 android:textColor="@color/black"
                 android:textSize="13sp" />-->

            <TextView
                android:id="@+id/tv_custom_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/icon_customer_service"
                android:drawablePadding="@dimen/dp_2"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:text="@string/customer_service"
                android:textColor="@color/COLOR_FF333333"
                android:paddingLeft="@dimen/dp_6"
                android:paddingRight="@dimen/dp_6"
                android:textSize="12sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/ll_login_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    >
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        >

                        <TextView
                            android:id="@+id/tv_cart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableTop="@mipmap/icon_cart"
                            android:drawablePadding="@dimen/dp_2"
                            android:gravity="center"
                            android:layout_gravity="center_vertical"
                            android:text="@string/shop_cart"
                            android:textColor="@color/COLOR_FF333333"
                            android:paddingLeft="@dimen/dp_12"
                            android:paddingRight="@dimen/dp_12"
                            android:textSize="12sp" />
                        <TextView
                            android:id="@+id/tv_cart_product_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="11"
                            android:textColor="@color/white"
                            android:background="@drawable/shape_red_corner_6"
                            android:layout_alignRight="@+id/tv_cart"
                            android:layout_marginRight="@dimen/dp_10"
                            android:textSize="@dimen/dp_10"
                            android:paddingLeft="@dimen/dp_3"
                            android:paddingRight="@dimen/dp_3"
                            android:textStyle="bold"
                            />

                    </RelativeLayout>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/tv_add_cart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_white_bg_blue_stroke_20"
                        android:paddingTop="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_10"
                        android:paddingLeft="@dimen/dp_16"
                        android:paddingRight="@dimen/dp_16"
                        android:text="@string/add_cart"
                        android:textColor="@color/COLOR_FF1677FF"
                        android:textStyle="bold"
                        android:textSize="@dimen/textsize_14"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/dp_8"
                        />

                    <TextView
                        android:id="@+id/tv_buy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_confirm_corner"
                        android:paddingTop="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_10"
                        android:paddingLeft="@dimen/dp_16"
                        android:paddingRight="@dimen/dp_16"
                        android:text="@string/buy"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="@dimen/textsize_14"
                        android:layout_gravity="center_vertical"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_buy_no_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:background="@drawable/shape_confirm_corner"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_10"
                    android:text="@string/buy"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/textsize_14"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_horizontal"
                    android:visibility="gone"
                    />
            </RelativeLayout>



        </LinearLayout>
    </LinearLayout>
    <com.kasa.ola.widget.LoadingView
        android:id="@+id/loading_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</RelativeLayout>