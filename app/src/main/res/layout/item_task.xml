<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:id="@+id/cv_item"
    android:layout_marginTop="@dimen/dp_4"
    android:layout_marginBottom="@dimen/dp_4"
    android:layout_marginLeft="@dimen/dp_12"
    android:layout_marginRight="@dimen/dp_12"
    app:cardCornerRadius="@dimen/dp_8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_8"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/iv_product"
            android:layout_width="104dp"
            android:layout_height="104dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp_8"
            >

            <TextView
                android:id="@+id/tv_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:ellipsize="end"
                android:textColor="@color/COLOR_FF333333"
                android:textStyle="bold"
                android:textSize="@dimen/textsize_16"
                android:text="麦淘实验室年卡测试"
                />
            <TextView
                android:id="@+id/tv_product_describe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_2"
                android:textSize="@dimen/textsize_13"
                android:textColor="@color/COLOR_FF999999"
                android:lines="1"
                android:ellipsize="end"
                android:text="就是等级分类顺德警方打击司法鉴定书家附近的树林间房间打扫房间的老"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_2"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/commission_title"
                            android:textColor="@color/COLOR_FF333333"
                            android:textSize="@dimen/textsize_12"
                            android:layout_gravity="center_vertical"
                            />
                        <TextView
                            android:id="@+id/tv_back_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/price"
                            android:textColor="@color/red"
                            android:textSize="@dimen/textsize_16"
                            android:textStyle="bold"
                            android:layout_gravity="center_vertical"
                            />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.3km"
                        android:drawableLeft="@mipmap/location_icon"
                        android:drawablePadding="@dimen/dp_4"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/textsize_12"
                        android:layout_marginTop="@dimen/dp_6"
                        android:textColor="@color/COLOR_FF666666"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_check_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_white_bg_blue_stroke_18"
                    android:text="@string/check_detail"
                    android:layout_gravity="bottom"
                    android:textSize="@dimen/textsize_14"
                    android:textColor="@color/COLOR_FF1677FF"
                    android:paddingTop="@dimen/dp_6"
                    android:paddingBottom="@dimen/dp_6"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingRight="@dimen/dp_16"
                    />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>