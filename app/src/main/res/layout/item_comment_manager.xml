<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_4"
    android:layout_marginBottom="@dimen/dp_4"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:paddingTop="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_4"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <com.kasa.ola.widget.RoundImageView
                android:id="@+id/iv_comment_head"
                android:layout_width="@dimen/dp_36"
                android:layout_height="@dimen/dp_36"
                android:src="@mipmap/icon_comment_head"
                android:layout_gravity="center_vertical"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/tv_comment_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textsize_14"
                    android:textColor="@color/COLOR_FF333333"
                    tools:text="ola_1(测试)"
                    />
                <TextView
                    android:id="@+id/tv_comment_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="评论时间（测试）"
                    android:textColor="@color/COLOR_FF999999"
                    android:textSize="@dimen/textsize_12"
                    />
            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/tv_comment_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:textColor="@color/COLOR_FF333333"
            android:textSize="@dimen/textsize_14"
            tools:text="测试 伺机待发洛杉矶的封建时代浪费精力圣诞节时刻提防杀了对方打了四分士大夫但是"
            />
    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_comment_images"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_marginBottom="@dimen/dp_12"
        android:background="@drawable/shape_white_corner_f2f2f2"
        android:padding="@dimen/dp_8"
        >

        <ImageView
            android:id="@+id/iv_product"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:scaleType="centerCrop"
            android:layout_gravity="center_vertical"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_8"
            >
            <TextView
                android:id="@+id/tv_product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/COLOR_FF333333"
                android:textSize="@dimen/textsize_14"
                android:textStyle="bold"
                android:lines="1"
                android:ellipsize="end"
                />
            <TextView
                android:id="@+id/tv_product_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/COLOR_FF999999"
                android:textSize="@dimen/textsize_12"
                android:layout_marginTop="@dimen/dp_4"
                android:lines="1"
                android:ellipsize="end"
                />
            <TextView
                android:id="@+id/tv_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/COLOR_FF333333"
                android:textSize="@dimen/textsize_16"
                android:text="@string/price"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/dp_9"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>