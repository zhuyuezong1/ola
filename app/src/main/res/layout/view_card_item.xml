<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/view_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15"
    >

    <ImageView
        android:id="@+id/iv_bg_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@mipmap/bankcard_image"/>
    
    <ImageView
        android:id="@+id/iv_icon_img"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_alignLeft="@+id/iv_bg_img"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iv_bg_img"
        android:layout_marginLeft="96dp"
        android:layout_marginTop="22dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_bank_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="建设银行"
                android:textColor="@color/white"
                android:layout_gravity="center_vertical"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_card_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_white_outline"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_gravity="center_vertical"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:paddingTop="@dimen/dp_2"
                android:paddingBottom="@dimen/dp_2"
                android:text="储蓄卡"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_card_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            tools:text="***  ***  ***  3548"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iv_bg_img"
        android:layout_alignRight="@+id/iv_bg_img"
        android:layout_alignBottom="@+id/iv_bg_img"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:layout_marginBottom="@dimen/dp_15"
        android:background="@drawable/bg_rectangle_42ffffff">



        <TextView
            android:id="@+id/tv_set_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:drawableLeft="@mipmap/uncheck_icon"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:text="设为默认"
            android:textColor="@color/COLOR_FF1A1A1A"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:layout_marginRight="60dp"
            android:drawableLeft="@mipmap/delete"
            android:drawablePadding="8dp"
            android:includeFontPadding="false"
            android:text="删除"
            android:textColor="@color/COLOR_FF1A1A1A"
            android:textSize="14sp" />

    </RelativeLayout>

</RelativeLayout>