<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:background="@drawable/shape_top_corner_f2f2f2"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pop_pay_order"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_marginBottom="@dimen/dp_14"
            android:textSize="@dimen/textsize_16"
            android:textColor="@color/COLOR_FF333333"
            android:textStyle="bold"
            />
        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_close"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_20"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_surplus_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="支付剩余时间29:59"
        android:textColor="@color/COLOR_FF333333"
        android:textSize="@dimen/textsize_14"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_15"
        />
    <TextView
        android:id="@+id/tv_pay_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/price"
        android:textSize="@dimen/textsize_32"
        android:textStyle="bold"
        android:textColor="@color/COLOR_FF333333"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_4"
        />
    <TextView
        android:id="@+id/tv_product_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pay_total_product_num"
        android:textSize="@dimen/textsize_14"
        android:textColor="@color/COLOR_FF333333"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_4"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:layout_margin="@dimen/dp_12"
        android:background="@drawable/bg_rectangle_white_cornor_8"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imageView_payType"
            android:layout_width="@dimen/dp_44"
            android:layout_height="@dimen/dp_44"
            android:layout_gravity="center_vertical"
            android:background="@drawable/ic_launcher_background"/>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_gravity="center_vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/textView_payType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NULL"
                android:textColor="@color/COLOR_FF333333"
                android:textSize="@dimen/textsize_14"
                android:textStyle="bold"
                android:layout_gravity="top"/>

            <TextView
                android:id="@+id/textView_explain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NULL"
                android:textColor="@color/COLOR_FF999999"
                android:textSize="@dimen/textsize_12"
                android:layout_gravity="bottom"/>
        </FrameLayout>

        <TextView
            android:id="@+id/is_vacancies_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/toggle_close"
            android:scaleType="center" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_money_pay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_12"
            android:textColor="@color/COLOR_FF333333"
            android:textSize="@dimen/textsize_14"
            android:text="@string/other_pay_type"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_pays"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="@string/pop_confirm_pay"
        android:textStyle="bold"
        android:background="@drawable/shape_blue_corner_22"
        android:textSize="@dimen/textsize_16"
        android:paddingTop="@dimen/dp_11"
        android:gravity="center"
        android:paddingBottom="@dimen/dp_11"
        android:layout_gravity="right"
        android:layout_margin="@dimen/dp_12"
        />

</LinearLayout>