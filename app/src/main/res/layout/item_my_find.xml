<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_product"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_6"
    app:cardCornerRadius="@dimen/dp_8"
    android:background="@color/white"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:id="@+id/item_find_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/COLOR_FFF6F6F6"
        >
        <RelativeLayout
            android:id="@+id/rl_my_publish_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/item_iv_find"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop"
                />
            <TextView
                android:id="@+id/tv_check_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="审核未通过测试"
                android:textColor="@color/red"
                android:textSize="@dimen/textsize_12"
                android:layout_alignParentBottom="true"
                android:background="@color/COLOR_FFFFF0F0"
                android:drawablePadding="@dimen/dp_2"
                android:drawableLeft="@mipmap/icon_find_notice"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_8"
                />
            <RelativeLayout
                android:id="@+id/rl_edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/COLOR_80000000"
                android:visibility="gone"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerInParent="true"
                    >
                    <TextView
                        android:id="@+id/tv_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_filter_btn_checked_white"
                        android:paddingTop="@dimen/dp_6"
                        android:paddingBottom="@dimen/dp_6"
                        android:paddingLeft="@dimen/dp_59"
                        android:paddingRight="@dimen/dp_59"
                        android:textSize="@dimen/textsize_14"
                        android:textColor="@color/COLOR_FF333333"
                        android:text="@string/edit"
                        />
                    <TextView
                        android:id="@+id/tv_delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_filter_btn_checked_white"
                        android:paddingTop="@dimen/dp_6"
                        android:paddingBottom="@dimen/dp_6"
                        android:paddingLeft="@dimen/dp_59"
                        android:paddingRight="@dimen/dp_59"
                        android:textSize="@dimen/textsize_14"
                        android:textColor="@color/COLOR_FF333333"
                        android:text="@string/delete"
                        android:layout_marginTop="@dimen/dp_12"
                        />

                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_8"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/item_tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="2"
                android:ellipsize="end"
                android:textSize="@dimen/textsize_16"
                android:textStyle="bold"
                android:textColor="@color/COLOR_FF333333"
                tools:text="标题测试"
                />
            <TextView
                android:id="@+id/tv_shop_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:lines="1"
                android:ellipsize="end"
                android:textSize="@dimen/textsize_12"
                android:textStyle="bold"
                android:textColor="@color/COLOR_FF999999"
                android:text="店铺名测试"
                android:layout_marginTop="@dimen/dp_4"
                android:visibility="gone"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginBottom="@dimen/dp_12"
            >
            <TextView
                android:id="@+id/tv_read_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textsize_12"
                android:textColor="@color/COLOR_FF999999"
                tools:text="阅读数"
                android:drawableLeft="@mipmap/icon_eye"
                android:drawablePadding="@dimen/dp_3"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:id="@+id/tv_comment_num"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textsize_12"
                android:textColor="@color/COLOR_FF999999"
                tools:text="评论数"
                android:drawableLeft="@mipmap/icon_comment"
                android:drawablePadding="@dimen/dp_3"
                android:gravity="center_vertical|left"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_gravity="center_vertical"
                />
            <ImageView
                android:id="@+id/iv_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_found_more"
                android:scaleType="centerCrop"
                />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>