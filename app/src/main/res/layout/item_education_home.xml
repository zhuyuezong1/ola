<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:id="@+id/cv_item"
    app:cardCornerRadius="@dimen/dp_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        >

        <ImageView
            android:id="@+id/iv_course"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp_5"
            >

            <TextView
                android:id="@+id/tv_course_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_18"
                android:text="高考备战冲刺课"
                />
            <TextView
                android:id="@+id/tv_course_describe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textsize_15"
                android:textColor="@color/COLOR_FF666666"
                android:text="就是等级分类顺德警方打击司法鉴定书家附近的树林间房间打扫房间的老"
                />
            <TextView
                android:id="@+id/tv_order_enter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_enter"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_16"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/dp_5"
                android:paddingTop="@dimen/dp_2"
                android:paddingBottom="@dimen/dp_2"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:background="@drawable/bg_rectangle_deep_blue_corner"
                />

        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>