<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_corner"
    android:layout_marginLeft="@dimen/dp_12"
    android:layout_marginRight="@dimen/dp_12"
    android:layout_marginBottom="@dimen/dp_6"
    android:layout_marginTop="@dimen/dp_6"
    android:paddingLeft="@dimen/dp_16"
    android:paddingRight="@dimen/dp_16"
    android:paddingTop="@dimen/dp_12"
    android:paddingBottom="@dimen/dp_12">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/COLOR_FF333333"
                    android:textSize="@dimen/textsize_16"
                    android:layout_gravity="center_vertical"
                    tools:text="张某某"
                    />
                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/COLOR_FF999999"
                    android:textSize="@dimen/textsize_16"
                    android:layout_gravity="center_vertical"
                    tools:text="12345678912"
                    android:layout_marginLeft="@dimen/dp_4"
                    />
                <TextView
                    android:id="@+id/tv_default_flag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/default_title"
                    android:textSize="@dimen/textsize_12"
                    android:textColor="@color/white"
                    android:paddingTop="@dimen/dp_2"
                    android:paddingBottom="@dimen/dp_2"
                    android:paddingLeft="@dimen/dp_8"
                    android:paddingRight="@dimen/dp_8"
                    android:background="@drawable/shape_blue_corner_4"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_4"
                    />


            </LinearLayout>
            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="测试地址"
                android:textColor="@color/COLOR_FF333333"
                android:layout_marginTop="@dimen/dp_4"
                android:textSize="@dimen/textsize_14"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            >
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/bg_default_color"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dp_12"
                />
            <TextView
                android:id="@+id/tv_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textsize_12"
                android:textColor="@color/COLOR_FF333333"
                android:drawableTop="@mipmap/icon_edit"
                android:layout_gravity="center_vertical"
                android:drawablePadding="@dimen/dp_8"
                android:text="@string/edit"
                />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>