<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_default_color"
    >

    <include
        layout="@layout/view_actionbar"
        />
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_8"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16"
                android:background="@color/white"
                >

                <LinearLayout
                    style="@style/task_publish_ll"
                    >
                    <TextView
                        android:text="@string/title"
                        style="@style/task_publish_ll_left"/>
                    <EditText
                        android:id="@+id/et_title"
                        style="@style/task_publish_ll_right_et"
                        android:hint="@string/please_input_title_hint"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/bg_default_color"
                    />
                <LinearLayout
                    style="@style/task_publish_ll"
                    android:layout_height="@dimen/dp_100"
                    >
                    <TextView
                        android:text="@string/desc"
                        style="@style/task_publish_ll_left"/>
                    <EditText
                        android:id="@+id/et_desc"
                        style="@style/task_publish_ll_right_et"
                        android:hint="@string/please_input_desc_hint"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_15"
                        android:gravity="top|left"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/bg_default_color"
                    />
                <LinearLayout
                    style="@style/task_publish_ll"
                    >
                    <TextView
                        android:text="@string/task_effective_time"
                        style="@style/task_publish_ll_left"/>
                    <TextView
                        android:id="@+id/tv_task_effective_time"
                        style="@style/fragment_shop_apply_item_right"
                        android:drawableRight="@mipmap/go_next"
                        android:textColor="@color/COLOR_FF333333"
                        android:drawablePadding="@dimen/dp_4"
                        android:hint="@string/please_input_task_effective_time_hint"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_8"
                android:background="@color/white"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16"
                >

                <LinearLayout
                    style="@style/task_publish_ll"
                    >
                    <TextView
                        android:text="@string/salary_level"
                        style="@style/task_publish_ll_left"/>
                    <EditText
                        style="@style/task_publish_ll_right_et"
                        android:hint="@string/please_input_salary_level_hint"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/bg_default_color"
                    />
                <LinearLayout
                    style="@style/task_publish_ll"
                    >
                    <TextView
                        android:text="@string/is_platform_assure"
                        style="@style/task_publish_ll_left"
                        android:drawableRight="@mipmap/grey_question"
                        android:drawablePadding="@dimen/dp_4"
                        />
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1">

                        <CheckBox
                            android:id="@+id/btn_is_platform_assure"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:button="@drawable/selector_toggle_button"
                            android:checked="false"
                            android:scaleType="center" />
                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:background="@color/white"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16"
                android:orientation="vertical"
                >
                <LinearLayout
                    style="@style/task_publish_ll"
                    >
                    <TextView
                        android:text="@string/contact"
                        style="@style/task_publish_ll_left"/>
                    <EditText
                        android:id="@+id/et_contact"
                        style="@style/task_publish_ll_right_et"
                        android:hint="@string/please_input_contact_hint"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/bg_default_color"
                    />
                <LinearLayout
                    style="@style/task_publish_ll"
                    >
                    <TextView
                        android:text="@string/task_mobile"
                        style="@style/task_publish_ll_left"/>
                    <EditText
                        android:id="@+id/et_mobile"
                        style="@style/task_publish_ll_right_et"
                        android:hint="@string/please_input_mobile_hint"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:background="@color/white"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16"
                android:orientation="vertical"
                >

                <LinearLayout
                    style="@style/task_publish_ll"
                    >
                    <TextView
                        android:text="@string/area"
                        style="@style/task_publish_ll_left"/>
                    <TextView
                        android:id="@+id/tv_select_area"
                        style="@style/fragment_shop_apply_item_right"
                        android:drawableRight="@mipmap/go_next"
                        android:drawablePadding="@dimen/dp_4"
                        android:textColor="@color/COLOR_FF333333"
                        android:hint="@string/please_input_select_area_hint"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/bg_default_color"
                    />
                <LinearLayout
                    style="@style/task_publish_ll"
                    android:layout_height="@dimen/dp_100"
                    >
                    <TextView
                        android:text="@string/detail_address"
                        style="@style/task_publish_ll_left"/>
                    <EditText
                        android:id="@+id/et_detail_address"
                        style="@style/task_publish_ll_right_et"
                        android:hint="@string/please_input_detail_address_hint"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_15"
                        android:gravity="top|left"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:background="@color/white"
                android:orientation="vertical"
                >

                <TextView
                    style="@style/fragment_shop_apply_item_left"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingRight="@dimen/dp_16"
                    android:text="@string/upload_images" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/COLOR_FFF2F2F2"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingRight="@dimen/dp_16"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_images"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginBottom="@dimen/dp_8"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/COLOR_FF999999"
                android:textSize="@dimen/textsize_12"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_marginBottom="@dimen/dp_12"
                android:text="@string/task_publish_intro"
                />
            <Button
                android:id="@+id/btn_commit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_12"
                android:background="@drawable/shape_corner_d5d5d5"
                android:text="@string/commit_and_publish"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:paddingTop="@dimen/dp_11"
                android:paddingBottom="@dimen/dp_11"
                android:textSize="@dimen/textsize_16" />


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>



</LinearLayout>