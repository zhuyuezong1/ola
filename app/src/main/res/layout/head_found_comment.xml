<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="@dimen/dp_12"
        >
        <com.kasa.ola.widget.xbanner.XBanner
            android:id="@+id/found_comment_banner"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            />

        <TextView
            android:id="@+id/tv_comment_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/COLOR_FF333333"
            android:textSize="@dimen/textsize_16"
            android:layout_marginTop="@dimen/dp_12"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rectangle_white_cornor_8"
            android:id="@+id/cv_item"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_12"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_8"
                android:background="@color/white"
                >

                <ImageView
                    android:id="@+id/iv_shop_logo"
                    android:layout_width="82dp"
                    android:layout_height="82dp"
                    android:scaleType="centerCrop"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_4"
                    >

                    <TextView
                        android:id="@+id/tv_shop_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:textColor="@color/COLOR_FF333333"
                        android:textSize="@dimen/textsize_16"
                        android:textStyle="bold"
                        android:text=""
                        />
                    <TextView
                        android:id="@+id/tv_shop_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textsize_13"
                        android:lines="2"
                        android:ellipsize="end"
                        android:layout_marginTop="@dimen/dp_4"
                        android:textColor="@color/COLOR_FF999999"
                        android:text=""
                        />

                    <TextView
                        android:id="@+id/tv_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/COLOR_FF666666"
                        android:textSize="@dimen/textsize_12"
                        android:gravity="left|center_vertical"
                        android:layout_gravity="right"
                        android:drawablePadding="@dimen/dp_2"
                        android:drawableLeft="@mipmap/location_icon"
                        />
                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/tv_comment_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize_16"
            android:textColor="@color/COLOR_FF333333"
            android:textStyle="bold"
            android:text="@string/found_comment_num"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_marginBottom="@dimen/dp_14"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_12"
            android:paddingRight="@dimen/dp_12"
            android:paddingTop="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_12"
            >

            <com.kasa.ola.widget.RoundImageView
                android:id="@+id/image_head"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@mipmap/auth_head_image"
                android:scaleType="centerCrop"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:id="@+id/tv_comment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@drawable/shape_white_corner_f2f2f2_18"
                android:hint="@string/found_comment_hint"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_12"
                />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>