<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_default_color"
    >

    <com.kasa.ola.widget.xbanner.XBanner
        android:id="@+id/store_banner"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        >
        <TextView
            android:id="@+id/tv_store_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/textsize_20"
            android:textColor="@color/COLOR_FF333333"
            android:text="测试店名"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_8"
            />

        <LinearLayout
            android:id="@+id/ll_business_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_12"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/icon_shop"
                android:text="@string/business_hours_title"
                android:textSize="@dimen/textsize_14"
                android:textColor="@color/COLOR_FF333333"
                android:drawablePadding="@dimen/dp_10"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/COLOR_FF333333"
                android:textSize="@dimen/textsize_14"
                android:lines="1"
                android:ellipsize="end"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/go_next"
                android:paddingRight="@dimen/dp_3"
                android:paddingLeft="@dimen/dp_12"
                android:layout_gravity="center_vertical"
                />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/bg_default_color"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:src="@mipmap/icon_location"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:id="@+id/tv_address"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:textColor="@color/COLOR_FF333333"
                android:textSize="@dimen/textsize_14"
                android:layout_gravity="center_vertical"
                android:maxLines="2"
                />

            <ImageView
                android:id="@+id/iv_nav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_nav"
                android:paddingLeft="@dimen/dp_12"
                android:paddingRight="@dimen/dp_16"
                android:paddingTop="@dimen/dp_21"
                android:paddingBottom="@dimen/dp_21"
                />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/bg_default_color"
                android:layout_marginTop="@dimen/dp_22"
                android:layout_marginBottom="@dimen/dp_22"
                />
            <ImageView
                android:id="@+id/iv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_16"
                android:src="@mipmap/detail_icon_phone"
                android:layout_gravity="center_vertical"
                />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_12"
        android:textSize="@dimen/textsize_12"
        android:textColor="@color/COLOR_FF666666"
        android:text="@string/store_detail_tips"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:paddingTop="@dimen/dp_14"
        android:paddingBottom="@dimen/dp_14"
        android:background="@color/white"
        android:layout_marginBottom="0.5dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_16"
            android:textColor="@color/COLOR_FF333333"
            android:text="@string/store_selling"
            android:textStyle="bold"
            />

    </RelativeLayout>

</LinearLayout>