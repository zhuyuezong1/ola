<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="270dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bg_rectangle_white_cornor_8"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_20"
    >

    <ImageView
        android:id="@+id/iv_verification_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/verification_success"
        android:layout_gravity="center_horizontal"
        />

    <View
        android:id="@+id/view_blank"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_12"/>
    <TextView
        android:id="@+id/dialog_message"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:includeFontPadding="false"
        android:lineSpacingExtra="6dp"
        android:textColor="@color/COLOR_FF333333"
        android:textSize="@dimen/textsize_16"
        android:textStyle="bold"
        tools:text="核销成功" />
    <TextView
        android:id="@+id/dialog_message_desc"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:includeFontPadding="false"
        android:lineSpacingExtra="6dp"
        android:textColor="@color/COLOR_FF333333"
        android:textSize="14sp"
        tools:text="该笔订单已核销成功" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="16dp"
        android:background="@color/COLOR_FFD5D5D5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/COLOR_FF1E90FF"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="先不激活" />

        <View
            android:id="@+id/verification_divider"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/COLOR_FFD5D5D5"/>

        <TextView
            android:id="@+id/btn_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/COLOR_FF1E90FF"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="去购买" />

    </LinearLayout>

</LinearLayout>
