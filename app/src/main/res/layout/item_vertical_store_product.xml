<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rectangle_white_cornor_8"
    android:id="@+id/rl_item"
    android:layout_marginTop="@dimen/dp_4"
    android:layout_marginBottom="@dimen/dp_4"
    android:layout_marginLeft="@dimen/dp_12"
    android:layout_marginRight="@dimen/dp_12"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_8"
        >
        <RelativeLayout
            android:layout_width="104dp"
            android:layout_height="104dp">
            <ImageView
                android:id="@+id/iv_product"
                android:layout_width="104dp"
                android:layout_height="104dp" />
            <RelativeLayout
                android:id="@+id/rl_no_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_product"
                android:background="@drawable/shape_pink_corner_5"
                android:visibility="gone"
                >
                <TextView
                    android:id="@+id/tv_no_pass_flag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_pass_tips"
                    android:textColor="@color/red"
                    android:textSize="@dimen/textsize_12"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:paddingTop="@dimen/dp_6"
                    android:paddingBottom="@dimen/dp_6"
                    android:drawableRight="@mipmap/icon_red_question"
                    android:drawablePadding="@dimen/dp_4"
                    />
            </RelativeLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp_8"
            >

            <TextView
                android:id="@+id/tv_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:ellipsize="end"
                android:textColor="@color/COLOR_FF333333"
                android:textStyle="bold"
                android:textSize="@dimen/textsize_16"
                android:text="麦淘实验室年卡"
                />
            <TextView
                android:id="@+id/tv_product_describe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:textSize="@dimen/textsize_12"
                android:textColor="@color/COLOR_FF666666"
                android:lines="2"
                android:ellipsize="end"
                android:text="就是等级分类顺德警方打击司法鉴定书家附近的树林间房间打扫房间的老"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/price"
                    android:textColor="@color/red"
                    android:textSize="@dimen/textsize_16"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/tv_original_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_4"
                    android:layout_marginRight="@dimen/dp_4"
                    android:layout_gravity="center_vertical"
                    android:text="￥39.90"
                    android:textColor="@color/COLOR_FF999999"
                    android:textSize="@dimen/textsize_12" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_7"
                >
                <TextView
                    android:id="@+id/tv_stock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hot_sale_number"
                    android:textSize="@dimen/textsize_12"
                    android:textColor="@color/COLOR_FF666666"
                    android:layout_alignBottom="@+id/tv_up_or_down"
                    />
                <TextView
                    android:id="@+id/tv_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.3km"
                    android:drawableLeft="@mipmap/icon_location"
                    android:drawablePadding="@dimen/dp_2"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/textsize_12"
                    android:textColor="@color/COLOR_FF666666"
                    android:visibility="gone"
                    />
                <TextView
                    android:id="@+id/tv_up_or_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/COLOR_FF333333"
                    android:textSize="@dimen/textsize_12"
                    android:paddingTop="@dimen/dp_6"
                    android:paddingBottom="@dimen/dp_6"
                    android:paddingLeft="@dimen/dp_12"
                    android:paddingRight="@dimen/dp_12"
                    android:text="@string/undercarriage_product"
                    android:background="@drawable/shape_white_bg_grey_stroke_14"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_back_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_home_red_flag_8"
        android:text="测试"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_12"
        android:paddingLeft="@dimen/dp_4"
        android:paddingRight="@dimen/dp_4"
        android:visibility="gone"
        />
</RelativeLayout>