<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white"
    android:padding="@dimen/dp_12"
    android:id="@+id/ll_product"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/uneffective"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_15"
        android:textColor="@color/COLOR_FF7A7A7A"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/iv_product"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="fitCenter"
        android:layout_gravity="center_vertical"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_8"
        >

        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品名字：收到货富士康的方式机顶盒富送到发送到发顺丰"
            android:textColor="@color/COLOR_FF999999"
            android:lines="1"
            android:ellipsize="end"
            android:textSize="@dimen/textsize_14"
            />
        <TextView
            android:id="@+id/tv_product_format"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_2"
            android:text="商品规格：世纪东方卡时间段房间爱上对方"
            android:textColor="@color/COLOR_FF999999"
            android:textSize="@dimen/textsize_13"
            android:lines="1"
            android:ellipsize="end"
            />
       <!-- <TextView
            android:id="@+id/is_have_coupon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="不支持优惠券"
            android:padding="@dimen/dp_2"
            android:textSize="@dimen/textsize_10"
            android:background="@drawable/bg_rectangle_no_coupon"
            />-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_2"
            >

            <TextView
                android:id="@+id/tv_unit_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥12"
                android:textSize="@dimen/textsize_16"
                android:layout_centerVertical="true"
                android:textColor="@color/COLOR_FF999999"
                />



        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/product_undercarriage"
            android:textColor="@color/COLOR_FF333333"
            android:textSize="@dimen/textsize_12"
            android:layout_marginTop="@dimen/dp_2"
            />

    </LinearLayout>

</LinearLayout>