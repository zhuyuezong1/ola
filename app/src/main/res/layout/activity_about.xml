<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/COLOR_FFF2F2F2"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/view_actionbar"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:background="@mipmap/logo_about"/>

    <TextView
        android:id="@+id/tv_version_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        tools:text="@string/version_code"
        android:textSize="16sp"
        android:textColor="@color/COLOR_FF1A1A1A"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="25dp"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/view_version_update"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:paddingLeft="14dp"
            android:paddingRight="14dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/version_update"
                android:textColor="@color/COLOR_FF1A1A1A"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/go_grey" />

            <include layout="@layout/view_divider_bottom"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/view_register"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:paddingLeft="14dp"
            android:paddingRight="14dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/register_agreement"
                android:textColor="@color/COLOR_FF1A1A1A"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/go_grey" />

            <include layout="@layout/view_divider_bottom"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/view_privacy_ensure"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:paddingLeft="14dp"
            android:paddingRight="14dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/privacy_ensure_agreement"
                android:textColor="@color/COLOR_FF1A1A1A"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/go_grey" />

            <include layout="@layout/view_divider_bottom"/>

        </RelativeLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:gravity="center_horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/beian"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dp_80"
                />

            <!--<TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="@string/ruiquan"
                android:textColor="@color/font_color_gray"
                android:textSize="11sp" />

            <TextView
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="9dp"
                android:gravity="center"
                android:text="@string/ruiquan_introduce"
                android:textColor="@color/font_color_gray"
                android:textSize="10sp" />-->

        </LinearLayout>

    </FrameLayout>

</LinearLayout>