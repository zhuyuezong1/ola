<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/bg_rectangle_white_cornor_10"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/view_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_store_img"
                android:layout_width="22dp"
                android:layout_height="19dp"
                android:layout_marginLeft="14dp"
                android:src="@mipmap/icon_shop" />

            <TextView
                android:id="@+id/tv_store_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="@color/COLOR_FF333333"
                android:textSize="14sp"
                tools:text="龙创自营" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/COLOR_FFF2F2F2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:id="@+id/tv_order_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/COLOR_FF666666"
                android:layout_gravity="center_vertical"
                android:textSize="13sp"
                tools:text="订单编号：2018111010040001" />

            <TextView
                android:id="@+id/tv_order_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/COLOR_FF1677FF"
                android:layout_gravity="center_vertical"
                android:textSize="12sp"
                tools:text="待支付" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_good_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <!--<include layout="@layout/view_mall_order_good_item"/>-->
            <!--<include layout="@layout/view_mall_order_good_item"/>-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_8"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:id="@+id/tv_good_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="@color/COLOR_FF333333"
                android:textSize="14sp"
                tools:text="共2件商品  合计：￥" />

            <TextView
                android:id="@+id/tv_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/COLOR_FF333333"
                android:textSize="14sp"
                tools:text="888" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/COLOR_FFF2F2F2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|end"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_12"
        >

        <TextView
            android:id="@+id/tv_operate_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:paddingTop="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_8"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:background="@drawable/shape_cancel_corner"
            android:gravity="center"
            android:textColor="@color/COLOR_FF333333"
            android:textSize="13sp"
            tools:text="@string/cancel_order" />
        <TextView
            android:id="@+id/tv_operate_middle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:paddingTop="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_8"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:background="@drawable/shape_reset_corner"
            android:gravity="center"
            android:textColor="@color/COLOR_FF1677FF"
            android:textSize="13sp"
            tools:text="@string/cancel_order" />
        <TextView
            android:id="@+id/tv_operate_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:paddingTop="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_8"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:background="@drawable/shape_confirm_corner"
            android:text="@string/pay_right_now"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="13sp"
            />

    </LinearLayout>

