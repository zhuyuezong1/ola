<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@color/white"
    android:elevation="12dp"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/dp_12"
    android:paddingTop="10dp"
    android:paddingRight="@dimen/dp_12"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/tv_send"
        android:layout_width="55dp"
        android:layout_height="30dp"
        android:alpha=".9"
        android:gravity="center"
        android:text="发送"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_12"
        android:background="@drawable/bg_rectangle_blue_small_corner_2"
        app:layout_constraintBottom_toBottomOf="@id/ed_input"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/ed_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:imeOptions="flagNoExtractUi"
        android:background="@drawable/bg_comment_input"
        android:hint="请输入内容"
        android:lineSpacingMultiplier="1.2"
        android:maxHeight="150dp"
        android:minHeight="30dp"
        android:paddingLeft="@dimen/dp_12"
        android:paddingTop="8dp"
        android:paddingRight="@dimen/dp_12"
        android:paddingBottom="8dp"
        android:textColor="@color/COLOR_FF34364A"
        android:textColorHint="@color/COLOR_3334364A"
        android:textSize="@dimen/textsize_12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_send"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
