<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        >

        <ImageView
            android:id="@+id/iv_comment_head"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:src="@mipmap/icon_comment_head"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:id="@+id/tv_comment_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize_12"
            android:textColor="@color/COLOR_FF999999"
            android:text="@string/product_comment_user"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_gravity="center_vertical"
            />

    </LinearLayout>
    <TextView
        android:id="@+id/tv_sku"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="测试规格"
        android:textColor="@color/COLOR_FF999999"
        android:textSize="@dimen/textsize_12"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_2"
        />

    <TextView
        android:id="@+id/tv_comment_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:textColor="@color/COLOR_FF333333"
        android:textSize="@dimen/textsize_14"
        android:maxLines="2"
        android:ellipsize="end"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:text="测试 伺机待发洛杉矶的封建时代浪费精力圣诞节时刻提防杀了对方打了四分士大夫但是"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_comment_images"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_4"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/bg_default_color"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        />
</LinearLayout>