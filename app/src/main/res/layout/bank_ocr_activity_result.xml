<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/IDCardRootContainerE"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#242628"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/wb_bank_ocr_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:paddingRight="50dp"
            android:src="@mipmap/return_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="银行卡识别"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <RelativeLayout
            android:id="@+id/wb_bank_ocr_camera"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="80dp"
                android:src="@mipmap/bank_camera" />

        </RelativeLayout>
    </RelativeLayout>

    <com.webank.mbank.ocr.ui.component.RoundImageView
        android:id="@+id/wb_bank_card_no_image"
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        />

    <LinearLayout
        android:id="@+id/wb_bank_card_no_text"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/wb_bank_text_bg"
        android:gravity="center_vertical"
        >

        <EditText
            android:id="@+id/wb_bank_no_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:maxLength="4"
            android:clickable="true"
            android:inputType="number"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/wb_bank_no_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:inputType="number"
            android:background="@null"
            android:maxLength="4"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/wb_bank_no_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:maxLength="4"
            android:inputType="number"
            android:background="@null"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/wb_bank_no_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:inputType="number"
            android:maxLength="4"
            android:background="@null"
            android:textColor="#ffffff"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/wb_bank_no_five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:inputType="number"
            android:maxLength="4"
            android:background="@null"
            android:textColor="#ffffff"
            android:textSize="20sp" />


    </LinearLayout>

    <Button
        android:id="@+id/wb_bank_ocr_sure"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="53dp"
        android:background="@drawable/bank_ocr_finish"
        android:text="确定"
        android:textColor="#ffffff"
        android:textSize="14sp" />


</LinearLayout>