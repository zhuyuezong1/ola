<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dp_12"
    android:paddingRight="@dimen/dp_12"
    android:paddingBottom="@dimen/dp_6"
    android:paddingTop="@dimen/dp_6">
    <LinearLayout
        android:id="@+id/rrl_quality_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rectangle_bf5353_cornor_8"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/ll_shop_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_12"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/tv_shop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="测试店铺"
                    android:textSize="@dimen/textsize_16"
                    android:textColor="@color/white"
                    android:lines="1"
                    android:ellipsize="end"
                    />
                <TextView
                    android:id="@+id/tv_shop_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize_12"
                    android:layout_marginTop="@dimen/dp_4"
                    android:lines="1"
                    android:ellipsize="end"
                    tools:text="测试地址"
                    />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_check_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/home_go_next_white"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/dp_12"
                />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_quality_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_6"
            />

    </LinearLayout>

</LinearLayout>
